<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/main_food"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:fillViewport="true"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:id="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joghurt"
        android:textSize="20dp"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/MHD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Haltbar bis:"
        android:layout_below="@id/food_name"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/MHD"
        android:layout_alignBaseline="@id/MHD"
        android:layout_margin="8dp"
        android:text="01.01.2088"/>

    <ImageButton
        android:id="@+id/check_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/check"
        android:scaleType="centerCrop"
        android:padding="8dp"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/check_button"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/check_button"
        android:text="Geoeffnet"
        android:textSize="15dp"
        android:background="@android:color/holo_orange_light"/>

</RelativeLayout>