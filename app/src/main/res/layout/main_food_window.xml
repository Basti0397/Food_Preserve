<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:id="@+id/main_food"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_food_menu"
    android:fillViewport="true"
    android:layout_marginBottom="10dp"
    android:background="@drawable/list_shape">

    <ImageView
        android:id="@+id/category_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_round_fastfood_24px"
        android:layout_alignParentLeft="@id/food_name"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@id/category_img"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/days_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/food_name"
        android:text="MHD: "
        android:textColor="@android:color/black"
        android:layout_toRightOf="@id/category_img"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/main_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/days_left_text"
        android:layout_alignBaseline="@id/days_left_text"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/main_months"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/main_days"
        android:layout_alignBaseline="@id/days_left_text"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/main_years"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/main_months"
        android:layout_alignBaseline="@id/days_left_text"
        android:textColor="@color/colorBlack"/>


    <Button
        android:id="@+id/food_used"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:textSize="15dp"
        android:background="@drawable/list_shape"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>